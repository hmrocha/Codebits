<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Codebits" parent="Theme.Sherlock">
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:actionBarStyle">@style/Theme.Codebits.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Theme.Codebits.ActionBarStyle</item>
    </style>

    <style name="CodebitsButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/codebits_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Codebits.ActionBarStyle" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/Theme.Codebits.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Theme.Codebits.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.Codebits.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItem">
        <item name="android:textColor">@color/codebits_menu_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>